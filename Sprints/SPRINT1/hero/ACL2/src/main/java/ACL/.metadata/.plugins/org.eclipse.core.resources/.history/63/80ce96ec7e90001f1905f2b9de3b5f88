package ACL2;

public class hero {

    private int x;
    private int y;
    private int gridWidth;
    private int gridHeight;

    // Constructeur
    public hero(int x, int y, int gridWidth, int gridHeight) {
        this.x = x;
        this.y = y;
        this.gridWidth = gridWidth;
        this.gridHeight = gridHeight;
    }

    // Méthode pour afficher la grille
    public void displayGrid() {
        for (int i = 0; i < gridHeight; i++) {
            for (int j = 0; j < gridWidth; j++) {
                if (i == y && j == x) {
                    System.out.print("H ");
                } else {
                    System.out.print(". ");
                }
            }
            System.out.println();
        }
    }

    // Méthode pour afficher la position du héros
    public void displayPosition() {
        System.out.println("Position du héros : (" + x + ", " + y + ")");
    }

    // Méthode pour déplacer le héros
    public void move(char direction) {
        switch (direction) {
            case 'z': // haut
                if (y > 0) y--;
                break;
            case 's': // bas
                if (y < gridHeight - 1) y++;
                break;
            case 'q': // gauche
                if (x > 0) x--;
                break;
            case 'd': // droite
                if (x < gridWidth - 1) x++;
                break;
            default:
                System.out.println("Direction non valide.");
        }
    }
}


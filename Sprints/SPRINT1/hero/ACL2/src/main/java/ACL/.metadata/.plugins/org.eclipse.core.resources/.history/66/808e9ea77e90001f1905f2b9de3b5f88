package ACL2;
import java.util.Scanner;
public class main {

	 public static void main(String[] args) {

	        Scanner scanner = new Scanner(System.in);

	        

	        // Taille de la grille

	        int gridWidth = 5;

	        int gridHeight = 5;



	        // Initialisation du héros à la position centrale

	        Hero hero = new hero(gridWidth / 2, gridHeight / 2, gridWidth, gridHeight);



	        while (true) {

	            hero.displayGrid();

	            hero.displayPosition();



	            System.out.println("Utilise z (haut), s (bas), q (gauche), d (droite) pour déplacer le héros.");

	            char direction = scanner.next().charAt(0);



	            hero.move(direction);



	            // Clear the console (fonctionnalité dépendant de l'OS, ici pour une expérience visuelle plus fluide)

	            System.out.print("\033[H\033[2J");

	            System.out.flush();

	        }

	    }

	}


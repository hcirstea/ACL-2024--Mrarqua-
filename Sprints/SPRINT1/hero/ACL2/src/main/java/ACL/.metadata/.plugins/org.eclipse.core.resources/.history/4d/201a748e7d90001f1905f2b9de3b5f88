package ACL2;
import java.util.Scanner;
public class hero {

	private int x;

    private int y;

    private int maxX;

    private int maxY;



    public Hero(int startX, int startY, int maxX, int maxY) {

        this.x = startX;

        this.y = startY;

        this.maxX = maxX;

        this.maxY = maxY;

    }



    public void move(char direction) {

        switch (direction) {

            case 'z': // Move up

                if (y > 0) y--;

                break;

            case 's': // Move down

                if (y < maxY - 1) y++;

                break;

            case 'q': // Move left

                if (x > 0) x--;

                break;

            case 'd': // Move right

                if (x < maxX - 1) x++;

                break;

            default:

                System.out.println("Commande non valide. Utilise z (haut), s (bas), q (gauche), d (droite).");

                break;

        }

    }



    public void displayPosition() {

        System.out.println("HÃ©ro est en position (" + x + ", " + y + ")");

    }



    public void displayGrid() {

        for (int i = 0; i < maxY; i++) {

            for (int j = 0; j < maxX; j++) {

                if (i == y && j == x) {

                    System.out.print("H ");

                } else {

                    System.out.print(". ");

                }

            }

            System.out.println();

        }

    }

}